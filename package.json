{
  "name": "bibleslide",
  "version": "1.2.4",
  "description": "성경 구절 PPT 생성기 (\"Bible\" Verse to PPT \"Slide\")",
  "main": "out/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "start": "electron out/main/index.js",
    "build": "electron-vite build && electron-builder",
    "dist": "electron-builder",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kangdy25/BibleSlide.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kangdy25/BibleSlide/issues"
  },
  "homepage": "https://github.com/kangdy25/BibleSlide#readme",
  "dependencies": {
    "@radix-ui/themes": "^3.2.1",
    "electron-updater": "^6.6.2",
    "express": "^5.1.0",
    "lucide-react": "^0.540.0",
    "pptxgenjs": "^3.12.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^37.2.6",
    "electron-builder": "^24.0.0",
    "electron-vite": "^4.0.0",
    "globals": "^16.3.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^7.1.2",
    "vitest": "^4.0.16",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.kangdy25.bibleslide",
    "publish": {
      "provider": "github",
      "owner": "kangdy25",
      "repo": "BibleSlide"
    },
    "files": [
      "out/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "icon": "build/icon.icns"
    }
  }
}
