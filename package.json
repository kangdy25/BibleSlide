{
  "name": "bibleslide",
  "version": "1.0.0",
  "description": "성경 구절 PPT 생성기 (\"Bible\" Verse to PPT \"Slide\")",
  "main": "out/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"tsc --watch src/preload/index.ts\" \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "start": "electron .",
    "build": "electron-vite build && electron-builder",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kangdy25/BibleSlide.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kangdy25/BibleSlide/issues"
  },
  "homepage": "https://github.com/kangdy25/BibleSlide#readme",
  "dependencies": {
    "@radix-ui/themes": "^3.2.1",
    "express": "^5.1.0",
    "lucide-react": "^0.540.0",
    "pptxgenjs": "^3.12.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^37.2.6",
    "electron-builder": "^24.0.0",
    "electron-vite": "^4.0.0",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^7.1.2",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.kangdy25.bibleslide",
    "files": [
      "out/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "icon": "build/icon.icns"
    }
  }
}
