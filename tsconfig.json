{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src", "app", "types"]
}
